<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AmiberryActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <Button
        android:id="@+id/button_w"
        style="@style/AppTheme.OnscreenKeyboard.Button"
        android:text="W"
        app:layout_constraintBottom_toTopOf="@id/button_s"
        app:layout_constraintTop_toBottomOf="@id/button_w"
        app:layout_constraintLeft_toRightOf="@id/button_a"/>

    <Button
        android:id="@+id/button_a"
        style="@style/AppTheme.OnscreenKeyboard.Button"
        android:text="A"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button_s"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="32.5dp"/>

    <Button
        android:id="@+id/button_d"
        style="@style/AppTheme.OnscreenKeyboard.Button"
        android:text="D"
        app:layout_constraintBaseline_toBaselineOf="@id/button_a"
        app:layout_constraintLeft_toRightOf="@id/button_s" />

    <Button
        android:id="@+id/button_s"
        style="@style/AppTheme.OnscreenKeyboard.Button"
        android:text="S"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_w"
        app:layout_constraintLeft_toRightOf="@id/button_a"
        android:layout_marginBottom="24dp"/>


    <!-- Action Buttons -->
    <Button
        style="@style/AppTheme.OnscreenKeyboard.Button"
        android:text="KB"
        android:id="@+id/button_openkeyboard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>
    <Button
        style="@style/AppTheme.OnscreenKeyboard.Button"
        android:text="X"
        android:id="@+id/button_x"
        app:layout_constraintBaseline_toBaselineOf="@id/button_d"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="56.5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>